<header>
    <%= render "shared/nav" %>
</header>
<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, placeholder: "Name of the category" %>
  </div>
  <hr/>
  <div class="file-selector-container">
    <%= form.label :icon %>
    <%= form.file_field :icon, class: "file-selector" %>
  </div>
  <hr/>
  <div class="d-flex">
    <%= form.submit class: "btn btn-success"%>
  </div>
  <hr/>
  <div>
    <%= link_to "Show this category", @category, class: "btn btn-secondary" %>
  </div>
  <hr/>
  <div>
    <%= link_to "Back to categories", categories_path, class: "btn btn-primary" %>
  </div>
  </div>
<% end %>