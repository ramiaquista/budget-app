<div id="<%= dom_id category %>">
  <li class="categori-li-item">
  <%= image_tag category.icon %>
  <p>
    <strong>Name:</strong>
    <%= link_to category.name, category_expenses_path(:category_id => category.id) %><br /><br />
    <strong>Total Amount:</strong>
    <% @total = 0 %>
    <% category.expenses.each do |e| %> 
     <% @total += e.amount %>
    <% end %>
    <%= @total %>
    <% @total = 0%>
  </p>
  </li>
</div>
